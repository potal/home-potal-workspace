import threading

class MyThread(threading.Thread):
    '''
    classdocs
    '''


    def __init__(self,sock):
        '''
        Constructor
        '''
        self.sock = sock;
        self.is_running = True;
    def run(self):
        while self.is_running:
            buff = self.sock.recv(1024);
            print buff;
            
    def Close(self):
        self.is_running = False;